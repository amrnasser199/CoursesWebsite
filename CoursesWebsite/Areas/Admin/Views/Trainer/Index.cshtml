@model IEnumerable<CoursesWebsite.Models.TrainerModel>

@{
    ViewBag.Title = "Trainers";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Trainers </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creation_Date)
        </th>
        <th></th>
        <th>
            Courses
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Website)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Creation_Date)
    </td>
    <td>
        @Html.ActionLink("Courses", "Index", "Course", new { trainerID = item.ID },
                       new { @class = "btn-btn-primary" })
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
